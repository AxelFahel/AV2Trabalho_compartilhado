package main;

import java.util.ArrayList;
import java.io.File;

public class RodCutting {
    static int cutRod(int preço[], int n) {
        if (n <= 0)
            return 0;
        int max_val = Integer.MIN_VALUE;
        for (int i = 0; i<n; i++)
            max_val = Math.max(max_val, preço[i] + cutRod(preço, n-i-1));
        	return max_val;
    }
    
    public static void main(String args[]) {
    	List<Integer> arr = new ArrayList<Integer>();
    	File file = new File("C:\texto.txt");
    	//int arr[] = new int[] (new FileLoader("C:\texto.txt"));
    	//int arr[] = new int[] {1, 5, 8, 9, 10, 17, 17, 20};
    	int tam = arr.length;
    	System.out.println("Valor Maximo Obtido é "+ cutRod(arr, tam));
	}
}